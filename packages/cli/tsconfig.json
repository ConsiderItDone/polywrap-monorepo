{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "declarationDir": "build/types",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "lib": ["es2015", "es6", "esnext.asynciterable", "dom"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/__tests__/**/*.ts"]
}
