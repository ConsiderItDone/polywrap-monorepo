FROM node:{{node_version}}-alpine as base

RUN apk --no-cache --virtual build-dependencies add \
    bash \
    git \
    openssh \
    make \
    g++

WORKDIR /project

# Install deps in its own step, making rebuilds faster
# when just the Web3API schema & implementation files change
COPY package.json .
RUN yarn

# Copy all manifest files
{{#web3api_manifests}}
COPY {{.}} .
{{/web3api_manifests}}

# Copy all source files
{{#include}}
COPY {{.}} {{.}}
{{/include}}

{{#web3api_module_dirs}}
# Build the module at {{.}}
RUN ./node_modules/.bin/asc {{.}}/w3/entry.ts \
    --path ./node_modules \
    --outFile ./build/query.wasm \
    --use abort=src/query/w3/entry/w3Abort \
    --optimize --debug --importMemory \
    --runtime stub
{{/web3api_module_dirs}}
